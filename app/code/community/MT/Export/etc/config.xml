<config>
    <modules>
        <MT_Export>
            <version>2.0.0</version>
        </MT_Export>
    </modules>
    <global>
        <models>
            <export>
                <class>MT_Export_Model</class>
            </export>
        </models>
        <blocks>
            <export>
                <class>MT_Export_Block</class>
            </export>
        </blocks>
        <helpers>
            <export>
                <class>MT_Export_Helper</class>
            </export>
        </helpers>
    </global>
    <frontend>
        <routers>
            <export>
                <use>standard</use>
                <args>
                    <module>MT_Export</module>
                    <frontName>export</frontName>
                </args>
            </export>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <MT_Export before="Mage_Widget">MT_Export_Adminhtml</MT_Export>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <export>
                    <file>mt_export.xml</file>
                </export>
            </updates>
        </layout>
    </adminhtml>
</config>