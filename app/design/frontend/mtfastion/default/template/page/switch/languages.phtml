<?php
/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>

<?php 
	$name_store = $this->htmlEscape(Mage::app()->getStore()->getName());
	$path_img = Mage::getBaseDir('media');
	$link_flag = Mage::getBaseUrl('media').'wysiwyg/magenthemes/languages/'.strtolower($name_store).'.png';
	$link_flag_default = Mage::getBaseUrl('media').'wysiwyg/magenthemes/languages/unknown.png';
	$filename = $path_img.'/wysiwyg/magenthemes/languages/'.strtolower($name_store).'.png';
?>
<div class="language-topbar">
	<div class="lang-curr">
		<?php if (file_exists($filename)):  ?>
			<span class="img-flag"><img src="<?php echo $link_flag; ?>" alt="<?php echo $name_store; ?>"/></span>
		<?php else: ?>
			<span class="img-flag"><img src="<?php echo $link_flag_default; ?>" alt="<?php echo $name_store; ?>"/></span>
		<?php endif; ?>
		<span class="title hidden-xs"><?php echo $name_store; ?></span>
		<i class="fa fa-caret-down"></i>
	</div>
	<div class="lang-list">
		<ul>
		<?php foreach ($this->getStores() as $_lang): ?>
			<li>
				<a href="<?php echo $_lang->getCurrentUrl() ?>">
					<?php if(file_exists(Mage::getBaseDir('media').'/wysiwyg/magenthemes/languages/'.$this->htmlEscape(strtolower($_lang->getName())).'.png')) : ?>
						<span class="img-flag"><img src="<?php echo Mage::getBaseUrl('media').'wysiwyg/magenthemes/languages/'.$this->htmlEscape(strtolower($_lang->getName())).'.png' ?>" alt="<?php echo $this->htmlEscape(strtolower($_lang->getName())) ?>"></span>
					<?php else : ?>
						<span class="img-flag"><img src="<?php echo Mage::getBaseUrl('media').'wysiwyg/magenthemes/languages/unknown.png' ?>" alt="<?php echo $this->htmlEscape(strtolower($_lang->getName())) ?>"></span>
					<?php endif; ?>
					<span class="lang-name"><?php echo $this->htmlEscape($_lang->getName()) ?></span>
				</a>
			</li>
		<?php endforeach; ?>
		</ul>
	</div>
</div>

<?php endif; ?>