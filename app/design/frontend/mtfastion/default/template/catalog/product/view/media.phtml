/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
$margin = (int)Mage::getStoreConfig('mtfastion/product_page/zoom_margin');
$zoom_count = (int)Mage::getStoreConfig('mtfastion/product_page/zoom_count');
$media_url = Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA);

?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage() && Mage::getStoreConfig('mtfastion/product_page/zoom_enable')): ?>
    <p class="product-image">
        <a class="cloud-zoom" id="zoomID" rel="<?php echo Mage::helper('mtfastion')->getCloudZoomConfig(true)?>" href="<?php echo $this->helper('catalog/image')->init($_product, 'image')?>">
            <img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image')->resize(500,611)?>">
        </a>
    </p>
<?php else: ?>
    <p class="product-image">
        <?php
        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(500,611).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
        ?>
    </p>
<?php endif; ?>
<?php if (count($this->getGalleryImages()) > 0): ?>
    <div class="more-views" id="moreViews">
        <!--<h2><?php //echo $this->__('More Views') ?></h2>-->
        <ul class="slides">
            <?php foreach ($this->getGalleryImages() as $_image): ?>
                <li>
                    <a href="<?php echo $_image->getUrl()?>" title="<?php echo $this->htmlEscape($_image->getLabel())?>" class="cloud-zoom-gallery" rel="useZoom:'zoomID',smallImage:'<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(500,611)?>'">
                        <img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(114, 164)?>" width="114" height="164" alt="<?php echo $this->htmlEscape($_image->getLabel())?>" />
                    </a>
                </li>
            <?php endforeach; ?>
        </ul>
    </div>
    <?php if(Mage::getStoreConfig('mtfastion/product_page/zoom_enable')):?>
        <script type="text/javascript">
            $mt(document).ready(function(){
                $mt('#moreViews .slides').owlCarousel({
                    items : <?php echo $zoom_count; ?>,
                    lazyLoad : true,
                    slideSpeed : 500,
                    pagination : false,
                    navigation : true,
                    
                    navigationText : ['<img src="<?php echo $media_url; ?>wysiwyg/magenthemes/static/prev-viewmore.png" />','<img src="<?php echo $media_url; ?>wysiwyg/magenthemes/static/next-viewmore.png" />'],
                    
                });
            });
        </script>
    <?php endif; ?>
<?php endif; ?>
