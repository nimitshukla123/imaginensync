<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
    $zoom_count = (int)Mage::getStoreConfig('mtfastion/product_page/zoom_count');
    $media_url = Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA);

?>
<div class="product-image product-image-zoom" id="elevate-zoom-container">
    <div class="product-image-gallery">
        <?php $i=0; foreach ($this->getGalleryImages() as $_image): ?>
            <?php if ($this->isGalleryImageVisible($_image)): ?>
            <img id="image-<?php echo $i; ?>"
                 class="gallery-image <?php echo $i == 0 ? 'visible' : ''; ?> elevate-zoom"
                 src="<?php echo $this->getGalleryImageUrl($_image); ?>"
                 data-zoom-image="<?php echo  $this->getGalleryImageUrl($_image); ?>" />
            <?php endif; ?>
        <?php $i++; endforeach; ?>
    </div>
</div>
<div class="zoom-button-group">
    <?php $i=0; foreach ($this->getGalleryImages() as $_image): ?>
        <?php if ($this->isGalleryImageVisible($_image)): ?>
            <a id="zoom-btn-<?php echo $i; ?>" class="lightbox-group <?php echo $i == 0 ? 'visible' : ''; ?> gallery-zoom" href="<?php echo $this->getGalleryImageUrl($_image); ?>" title="<?php echo $this->escapeHtml($this->getImageLabel()); ?>"><?php echo $this->__('Zoom'); ?></a>
        <?php endif; ?>
        <?php $i++; endforeach; ?>
</div>
<script type="text/javascript">
    var options = <?php echo Mage::helper('mtfastion')->getElevateZoomConfig()?>;
    options = $mt.extend( {ancestorContainer: '#elevate-zoom-container'}, options );
    $mt(document).ready(function(){
        $mt(".lightbox-group").colorbox({rel:'lightbox-group',innerWidth:420, innerHeight:640, title: false});
    });

</script>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views" id="moreViews">
  
    <ul class="product-image-thumbs slides">
    <?php $i=0; foreach ($this->getGalleryImages() as $_image): ?>
        <?php if ($this->isGalleryImageVisible($_image)): ?>
        <li>
            <a class="thumb-link" href="#" title="<?php echo $this->escapeHtml($_image->getLabel()) ?>" data-image-index="<?php echo $i; ?>">
                <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(75); ?>"
                     width="75" height="75" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
            </a>
        </li>
        <?php endif; ?>
    <?php $i++; endforeach; ?>
    </ul>
</div>
    <?php if(Mage::getStoreConfig('mtfastion/product_page/zoom_enable')):?>
        <script type="text/javascript">
            $mt(document).ready(function(){
                $mt('#moreViews .slides').owlCarousel({
                    items : <?php echo $zoom_count; ?>,
                    lazyLoad : true,
                    slideSpeed : 500,
                    pagination : false,
                    navigation : true,
                });
            });
        </script>
    <?php endif; ?>
<?php endif; ?>

<?php echo $this->getChildHtml('after'); ?>
